<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Qwiki</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Qwiki.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/lib/daterangepicker/daterangepicker.min.css" />
    @RenderSection("styles", false)
</head>
<body>
    <audio id="meow" src="~/sounds/purr.mp3" preload="auto">
        Your browser does not support the
        <code>audio</code> element.
    </audio>
    <header>
        <nav class="navbar sticky-top navbar-expand-sm navbar-toggleable-sm navbar-light mb-3">
            <img id="meowLogo" class="nav-logo" src="data:image/gif;base64," />
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Qwiki</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 nav-underline">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Articles" asp-action="Index">Articles</a>
                        </li>
                        <li class="nav-item container">
                            <form asp-controller="Articles" asp-action="Search" method="get">
                                <div class="row">
                                    <div class="col-7 search-col">
                                        <input class="form-control search-bar" type="text" name="searchArticle" />
                                    </div>
                                    <div class="col-4 search-col">
                                        <input class="form-control search-datetime" type="text" id="dateRange" value="Between Dates" />
                                        <input hidden type="datetime-local" asp-format="{0:yyyy-MM-dd hh:mm}" name="startDate" value="" />
                                        <input hidden type="datetime-local" asp-format="{0:yyyy-MM-dd hh:mm}" name="endDate" value="" />
                                    </div>
                                    <div class="col-1 search-col">
                                        <button class="form-control search-btn" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                                    </div>
                                </div>
                            </form>
                        </li>
                        <li class="nav-item row justify-content-end theme-toggle">
                            <div class="col-1 theme-colorpicker-container">
                                <input type="color" class="theme-colorpicker" id="theme-colorpicker" name="theme-colorpicker" value="#FFFFFF" />
                            </div>
                            <div class="col-1 dark-mode-toggle-container">
                                <i class="dark-mode-toggle fa-solid fa-toggle-off active" id="dark-mode-off"></i>
                                <i class="dark-mode-toggle fa-solid fa-toggle-on" id="dark-mode-on"></i>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="row">
            <div class="col-1">
                <div style="display: inline-block; width: 20px; height: 20px; border: 1px solid black; background-color: var(--primary);"></div>
                <p style="display: inline-block;">primary</p>
            </div>
            <div class="col-1">
                <div style="display: inline-block; width: 20px; height: 20px; border: 1px solid black; background-color: var(--secondary);"></div>
                <p style="display: inline-block;">secondary</p>
            </div>
            <div class="col-1">
                <div style="display: inline-block; width: 20px; height: 20px; border: 1px solid black; background-color: var(--tertiary);"></div>
                <p style="display: inline-block;">tertiary</p>
            </div>
            <div class="col-1">
                <div style="display: inline-block; width: 20px; height: 20px; border: 1px solid black; background-color: var(--accent);"></div>
                <p style="display: inline-block;">accent</p>
            </div>
            <div class="col-1">
                <div style="display: inline-block; width: 20px; height: 20px; border: 1px solid black; background-color: var(--accent2);"></div>
                <p style="display: inline-block;">accent2</p>
            </div>
            <div class="col-1">
                <div style="display: inline-block; width: 20px; height: 20px; border: 1px solid black; background-color: var(--text);"></div>
                <p style="display: inline-block;">text</p>
            </div>
            <div class="col-1">
                <div style="display: inline-block; width: 20px; height: 20px; border: 1px solid black; background-color: var(--background);"></div>
                <p style="display: inline-block;">background</p>
            </div>
            <div class="col-1">
                <div style="display: inline-block; width: 20px; height: 20px; border: 1px solid black; background-color: var(--shade);"></div>
                <p style="display: inline-block;">shade</p>
            </div>
            <div class="col-1">
                <div style="display: inline-block; width: 20px; height: 20px; border: 1px solid black; background-color: var(--bs-primary);"></div>
                <p style="display: inline-block;">bs-primary</p>
            </div>
            <div class="col-1">
                <div style="display: inline-block; width: 20px; height: 20px; border: 1px solid black; background-color: var(--bs-success);"></div>
                <p style="display: inline-block;">bs-success</p>
            </div>
            <div class="col-1">
                <div style="display: inline-block; width: 20px; height: 20px; border: 1px solid black; background-color: var(--bs-info);"></div>
                <p style="display: inline-block;">bs-info</p>
            </div>
            <div class="col-1">
                <div style="display: inline-block; width: 20px; height: 20px; border: 1px solid black; background-color: var(--bs-warning);"></div>
                <p style="display: inline-block;">bs-warning</p>
            </div>
            <div class="col-1">
                <div style="display: inline-block; width: 20px; height: 20px; border: 1px solid black; background-color: var(--bs-danger);"></div>
                <p style="display: inline-block;">bs-danger</p>
            </div>
        </div>
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>
    

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2024 - Qwiki - <a class="footer-privacy-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/daterangepicker/moment.min.js"></script>
    <script src="~/lib/daterangepicker/daterangepicker.min.js"></script>
    <script src="~/js/Shimeji.standalone.js"></script>
    <script src="~/js/color-converter.js"></script>
    <script type="module">
        // doodle style underline, border text-decorations library
        import { annotate } from "/js/rough-notation.esm.js";
        var style = getComputedStyle(document.documentElement);

        $(function () {
            // daterange picker
            $('input#dateRange').daterangepicker({
                opens: 'left',
                autoUpdateInput: false,
                showDropdowns: true,
                timePicker: true,
                timePickerIncrement: 30,
                minYear: 1901,
                maxYear: parseInt(moment().format('YYYY'), 10),
                locale: {
                    format: 'YYYY-MM-DD hh:mm A',

                }
            }, function (start, end, label) {
                console.log("A new date selection was made: " + start.format('YYYY-MM-DD hh:mm') + ' to ' + end.format('YYYY-MM-DD hh:mm'));
            });

            $('input#dateRange').on('apply.daterangepicker', function (ev, picker) {
                let startDate = picker.startDate.format('YYYY-MM-DD hh:mm');
                let endDate = picker.endDate.format('YYYY-MM-DD hh:mm');
                $(this).val(startDate + ' - ' + endDate);
                $('input[name="startDate"').val(startDate);
                $('input[name="endDate"').val(endDate);
                //console.log("Verify: " + $('input[name="startDate"').val() + ' to ' + $('input[name="endDate"').val());
            });
            $('input#dateRange').on('cancel.daterangepicker', function (ev, picker) {
                $(this).val('Between Dates');
                $('input[name="startDate"').val('');
                $('input[name="endDate"').val('');
                //console.log("Verify: " + $('input[name="startDate"').val() + ' to ' + $('input[name="endDate"').val());
            });

            // theme colorpicker
            const primaryColor = HslColor.fromStr(style.getPropertyValue('--base-color'));
            $('#theme-colorpicker').val(primaryColor.toHex());

            // theme update
            const getStoredTheme = () => localStorage.getItem('theme');
            const setStoredTheme = theme => localStorage.setItem('theme', theme);
            /**
             * Utility function to calculate the current theme setting.
             * Look for a local storage value.
             * Fall back to system setting.
             * Fall back to light mode.
             **/
            const getPreferredTheme = () => {
                const storedTheme = getStoredTheme()
                if (storedTheme) {
                    return storedTheme;
                }

                return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
            }
            const setTheme = theme => {
                setStoredTheme(theme);
                document.querySelector("html").setAttribute("data-theme", theme);
            }


            const handleThemeUpdate = (hex) => {
                const root = document.querySelector(':root');
                const baseColorHex = new HexColor(hex);
                const baseColorRGB = RgbaColor.fromArr( baseColorHex.toRgb() ); // for alpha transparency
                const BaseColorHSL = HslColor.fromArr( baseColorHex.toHsl() ); // for easier hue rotation

                let bgColorLightHSL = HslColor.fromArr( [BaseColorHSL.h - 4, BaseColorHSL.s - 11, 98] );
                let bgColorDarkHSL = HslColor.fromArr( [BaseColorHSL.h - 4, BaseColorHSL.s - 11, 2] );
                root.style.setProperty('--base-color', BaseColorHSL.toStr());
                const mode = getPreferredTheme(); // get current light or dark mode
                const lightContrast = contrast(baseColorRGB.toRgbArr(), bgColorLightHSL.toRgb());
                const darkContrast = contrast(baseColorRGB.toRgbArr(), bgColorDarkHSL.toRgb());
                // console.log(lightContrast, ' ', darkContrast);
                // if light mode and contrast ratio above 7 (AAA grade)
                if (mode === 'light' && lightContrast < 6) {
                    // change to opposite mode for higher contrast
                    setTheme('dark');
                    isDarkMode = 'dark';
                }
                if (mode === 'dark' && darkContrast < 6) {
                    // change to opposite mode for higher contrast
                    setTheme('light');
                    isDarkMode = 'light';
                }
                updateDarkModeToggle();
            }



            // dark mode toggle
            let isDarkMode = getPreferredTheme();
            const updateDarkModeToggle = theme => {
                const mode = getPreferredTheme();
                if (theme)
                    mode = theme;
                
                if (mode === 'dark') {
                    $('i#dark-mode-on').addClass('active').show();
                    $('i#dark-mode-off').removeClass('active').hide();
                } else {
                    $('i#dark-mode-off').addClass('active').show();
                    $('i#dark-mode-on').removeClass('active').hide();
                }
                return;
            }
            updateDarkModeToggle();
            $('i.dark-mode-toggle.active').siblings().hide();
            $('i.dark-mode-toggle').click(function () {
                $(this).toggleClass('active').hide();
                $(this).siblings().toggleClass('active').show();
                const newTheme = isDarkMode === 'dark'? 'light' : 'dark';
                setTheme(newTheme);
                isDarkMode = newTheme;
            });

            // user select theme color
            $('#theme-colorpicker').change(function() {
                handleThemeUpdate($(this).val());
            });

            // logo meow on hover
            const meow = $('#meow').get(0);
            $('img#meowLogo').on('mouseenter', function () {
                console.log('here');
                meow.currentTime = 0;
                meow.play();
            });


            // Shimeji mascot controller
            var shimejiInstance = new ShimejiController({
                shimejiOptions: {
                    animate: true,
                    draggable: true,
                    move: true,
                    chaseFood: true,
                    duplicable: true,
                    stayInWindow: true,
                    showMenu: true,
                },
                foodOptions: {
                    dropFood: true,
                    stayInWindow: true,
                },
                autoSpawnShimeji: false,
                spawnInteral: 3,
            });

            // link doodle styled underline            
            const accentColor = style.getPropertyValue('--accent');
            const accentColor2 = style.getPropertyValue('--accent2');
            const links = Array.from(document.querySelectorAll('a:not(.nav-link, .navbar-brand, .article-card-ctrl, .footer-privacy-link)'));

            const linkAnnotations = Array(links.length).fill(undefined);
            links.forEach((link, index) => {
                linkAnnotations[index] = annotate(link, { 
                    type: 'underline',
                    color: accentColor,
                    padding: -2,
                    animate: true,
                    animationDuration: 200,
                    iterations: 1
                });
                linkAnnotations[index].show();
                link.addEventListener('mouseover', () => {
                    linkAnnotations[index].hide();
                    linkAnnotations[index].color = style.getPropertyValue('--accent2');
                    linkAnnotations[index].show();
                });
                link.addEventListener('mouseleave', () => {
                    linkAnnotations[index].hide();
                    linkAnnotations[index].color = style.getPropertyValue('--accent');
                    linkAnnotations[index].show();
                });
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
