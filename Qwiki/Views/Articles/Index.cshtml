<div class="container-fluid" style="margin-top: 20px;">
    <div class="row row-cols-2 row-cols-md-5 g-4">
        @foreach (var item in Model)
        {
            <div class="col card-flip">
                <div class="card h-100 card-front">
                    <img src="@item.Thumbnail" class="card-img-top" alt="@item.Title" />
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">Published on @item.Published</small>
                    </div>
                </div>
                <div class="card-back">
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Content)</p>
                    <div class="card-footer">
                        <nav class="nav nav-pills flex-column flex-sm-row">
                            <a class="flex-sm-fill text-sm-center nav-link article-card-ctrl" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="flex-sm-fill text-sm-center nav-link article-card-ctrl" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a class="flex-sm-fill text-sm-center nav-link article-card-ctrl" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </nav>
                    </div>
                </div>
            </div>    
        }
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/daterangepicker/moment.min.js"></script>
<script>
    $(function () {
        let url_params = new URLSearchParams(window.location.search);
        if (url_params.size > 0) {
            let exactDate = moment(url_params.get('exactDate')).format('YYYY-MM-DD');
            $('input[name="exactDate"]').val(exactDate);
        }
    });
</script>